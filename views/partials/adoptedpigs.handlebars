<body>
    <div class=>
        <div class="row">
            <center>
                <div class='pig-header'>
                    <h1>We've been adopted! </h1>
                </div>
            </center>
            {{#each pig}} {{#if this.isAdopted}}
            <div class="col-sm-6 col-md-3 text-center" class="pigCard">
                <div class="thumbnail pig-container">
                    <img src="{{this.pigImage}}" alt=>
                    <div class="caption">
                        <h3>{{this.pigName}}</h3>
                        <div class = "bio">{{this.pigBio}}</div>
                        <br/>
                    </div>
                </div>
            </div>
            {{/if}}{{/each}}
        </div>
    </div>
</body>