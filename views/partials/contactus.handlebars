<body>
    <div class="container">
        <div class="row">
            <div class="col-xs-8 col-xs-offset-2">
                <div class="form-area">
                    <form action="/addcontact" id="addContactForm" method="POST" role="form">
                        <br style="clear:both">
                        <h3 style="margin-bottom: 25px; text-align: center;">Contact Us</h3>
                        <div class="form-group">
                            <label for="">*First Name</label>
                            <input type="text" name="firstName" class="form-control" id="firstNameInput" placeholder="First Name" required>
                        </div>
                        <div class="form-group">
                            <label for="lastNameInput">*Last Name</label>
                            <input type="text" name="lastName" class="form-control" id="lastNameInput" placeholder="Last Name" required>
                        </div>
                        <div class="form-group">
                            <label for="phoneInput">*Phone</label>
                            <input type="tel" name="phone" class="form-control" id="phoneInput" placeholder="123-456-7890" required>
                        </div>
                        <div class="form-group">
                            <label for="emailInput">*Email</label>
                            <input type="email" name="email" class="form-control" id="emailInput" placeholder="johndoe@gmail.com" required>
                        </div>
                        <div class="checkbox">
                            <label for="isVolunteerInput">
                                <input type="checkbox" name="isVolunteer" id="isVolunteerInput" value="1">
                                Check here if you are interested in volunteering.
                            </label>
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" name="message" type="textarea" id="messageInput" placeholder="Message" maxlength="500" rows="7"></textarea> {{!--
                            <span class="help-block">
                                <p id="characterLeft" class="help-block ">You have reached the limit</p>
                            </span> --}}
                        </div>

                        <button type="submit" id="contact-submit-btn"  class="btn btn-primary pull-right">Submit Form</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        $('#addContactForm').one('submit', function(e) {
            e.preventDefault();
            swal("Thank you for contacting us.", "You successfully submitted your contact information. We will respond within 72 hours.", "success").then(() => {
                console.log($('#addContactForm'));
                $('#addContactForm').submit();
            })    
        })
    </script>
</body>