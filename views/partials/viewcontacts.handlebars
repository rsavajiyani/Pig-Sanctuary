<div>
    <h2>View Contacts</h2>
    <div class="table-responsive">
        <table class="table">
            <tr>
                <th> Contact ID </th>
                <th> First Name </th>
                <th> Last Name </th>
                <th> Phone Number </th>
                <th> Email </th>
                <th> Interested In Volunteering </th>
                <th> Message </th>
                <th> Contacted </th>
                <th> Contact </th>
            </tr>

            {{#each person}}
                <tr>
                    <td>{{this.id}}</td>
                    <td>{{this.firstName}}</td>
                    <td>{{this.lastName}}</td>
                    <td>{{this.phone}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.isVolunteer}}</td>
                    <td>{{this.message}}</td>
                    <td>{{this.contacted}}</td>
                    <td>
                        <form method="POST" action="/contact">
                                <input type="hidden" name="contact_id" type="text" value={{this.id}}>
                                <button type="submit" class="btn btn-primary">Contact Me</button>
                        </form>
                    </td>
                </tr>
            {{/each}}
        </table>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <p><a href="/pigpage">Pig Page</a> | <a href="/admin">Add Pig/Pig List</a></p>
        </div>
    </div>
</div>