<div>
    <h2>View Contacts</h2>
    <div class="table-responsive">
        <table class="table">
            <tr>
                <th> Contact ID </th>
                <th> First Name </th>
                <th> Last Name </th>
                <th> Phone Number </th>
                <th> Email </th>
                <th> Interested In Volunteering </th>
                <th> Message </th>
                <th> Contacted </th>
                {{!-- <th> Contact </th> --}}
            </tr>

            {{#each person}}
                <tr>
                    <td>{{this.id}}</td>
                    <td>{{this.firstName}}</td>
                    <td>{{this.lastName}}</td>
                    <td>{{this.phone}}</td>
                    <td><a href="mailto:{{this.email}}">{{this.email}}</a></td>
                    <td>{{this.isVolunteer}}</td>
                    <td>{{this.message}}</td>
                    <form method="POST" action="/contact">
                        <td>
                            <input type="hidden" name="contact_email" type="text" value={{this.email}}>
                            <select name="contacted" onchange="this.form.submit()">
                                <option disabled selected value>{{this.contacted}}</option>
                                <option>True</option>
                                <option>False</option>
                            </select>
                        </td>
                    </form>
                    {{!-- <td>
                        <form method="POST" action="/contact">
                                <input type="hidden" name="contact_email" type="text" value={{this.email}}>
                                <button type="submit"  class="btn btn-primary"><a href="mailto:{{this.email}}"></a>Contact Me</button>
                        </form>
                    </td> --}}
                </tr>
            {{/each}}
        </table>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <p><a href="/pigpage">Pig Page</a> | <a href="/admin">Add Pig/Pig List</a></p>
        </div>
    </div>
</div>